<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">


<!-- 不使用namespace是由于sql搜索定位会比较方便 -->
<sqlMap>

    <resultMap id="RM.CmsGroup" class="com.kailian.glo.model.CmsGroup">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="content" column="content"/>
        <result property="photo" column="photo"/>
        <result property="userCount" column="userCount"/>
        <result property="topicCount" column="topicCount"/>
        <result property="replyCount" column="replyCount"/>
        <result property="joinType" column="joinType"/>
        <result property="flag" column="flag"/>
        <result property="status" column="status"/>
        <result property="addition" column="addition"/>
        <result property="createtimelong" column="createtimelong"/>
        <result property="modifytimelong" column="modifytimelong"/>
        <result property="createuser" column="createuser"/>
        <result property="modifyuser" column="modifyuser"/>
        <result property="ext1" column="ext1"/>
        <result property="ext2" column="ext2"/>
        <result property="ext3" column="ext3"/>
        <result property="ext4" column="ext4"/>
        <result property="ext5" column="ext5"/>
        <result property="extInt1" column="extInt1"/>
        <result property="extInt2" column="extInt2"/>
        <result property="extInt3" column="extInt3"/>
        <result property="extInt4" column="extInt4"/>
        <result property="extInt5" column="extInt5"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="CmsGroup.columns">
	    <![CDATA[
        id ,name ,type ,content ,photo ,userCount ,topicCount ,replyCount ,joinType ,flag ,status ,addition ,createtimelong ,modifytimelong ,createuser ,modifyuser ,ext1 ,ext2 ,ext3 ,ext4 ,ext5 ,extInt1 ,extInt2 ,extInt3 ,extInt4 ,extInt5 
	    ]]>
	</sql>
	
    <insert id="CmsGroup.insert" >
    <![CDATA[
        INSERT INTO cms_group (
	        id  ,
	        name  ,
	        type  ,
	        content  ,
	        photo  ,
	        userCount  ,
	        topicCount  ,
	        replyCount  ,
	        joinType  ,
	        flag  ,
	        status  ,
	        addition  ,
	        createtimelong  ,
	        modifytimelong  ,
	        createuser  ,
	        modifyuser  ,
	        ext1  ,
	        ext2  ,
	        ext3  ,
	        ext4  ,
	        ext5  ,
	        extInt1  ,
	        extInt2  ,
	        extInt3  ,
	        extInt4  ,
	        extInt5  
        ) VALUES (
        	#id# ,
        	#name# ,
        	#type# ,
        	#content# ,
        	#photo# ,
        	#userCount# ,
        	#topicCount# ,
        	#replyCount# ,
        	#joinType# ,
        	#flag# ,
        	#status# ,
        	#addition# ,
        	#createtimelong# ,
        	#modifytimelong# ,
        	#createuser# ,
        	#modifyuser# ,
        	#ext1# ,
        	#ext2# ,
        	#ext3# ,
        	#ext4# ,
        	#ext5# ,
        	#extInt1# ,
        	#extInt2# ,
        	#extInt3# ,
        	#extInt4# ,
        	#extInt5# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    sybase:		type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="long" keyProperty="id"> 
 			SELECT LAST_INSERT_ID() 
		</selectKey>
    </insert>

    <update id="CmsGroup.update" >
    <![CDATA[
        UPDATE cms_group SET
	        name = #name# ,
	        type = #type# ,
	        content = #content# ,
	        photo = #photo# ,
	        userCount = #userCount# ,
	        topicCount = #topicCount# ,
	        replyCount = #replyCount# ,
	        joinType = #joinType# ,
	        flag = #flag# ,
	        status = #status# ,
	        addition = #addition# ,
	        createtimelong = #createtimelong# ,
	        modifytimelong = #modifytimelong# ,
	        createuser = #createuser# ,
	        modifyuser = #modifyuser# ,
	        ext1 = #ext1# ,
	        ext2 = #ext2# ,
	        ext3 = #ext3# ,
	        ext4 = #ext4# ,
	        ext5 = #ext5# ,
	        extInt1 = #extInt1# ,
	        extInt2 = #extInt2# ,
	        extInt3 = #extInt3# ,
	        extInt4 = #extInt4# ,
	        extInt5 = #extInt5# 
        WHERE 
	        id = #id# 
    ]]>
    </update>

    <delete id="CmsGroup.delete">
    <![CDATA[
        DELETE FROM cms_group WHERE
        id = #id# 
    ]]>
    </delete>
    
    <select id="CmsGroup.getById" resultMap="RM.CmsGroup">
	    SELECT <include refid="CmsGroup.columns"/>
	    <![CDATA[
	        FROM cms_group 
	        WHERE 
		        id = #id# 
	    ]]>
    </select>

	<sql id="CmsGroup.findPage.where">
	    <dynamic prepend="WHERE">
		       <isNotEmpty prepend="AND" property="id">
		             id = #id#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="name">
		             name = #name#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="type">
		             type = #type#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="content">
		             content = #content#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="photo">
		             photo = #photo#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="userCount">
		             userCount = #userCount#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="topicCount">
		             topicCount = #topicCount#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="replyCount">
		             replyCount = #replyCount#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="joinType">
		             joinType = #joinType#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="flag">
		             flag = #flag#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="status">
		             status = #status#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="addition">
		             addition = #addition#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="createtimelong">
		             createtimelong = #createtimelong#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="modifytimelong">
		             modifytimelong = #modifytimelong#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="createuser">
		             createuser = #createuser#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="modifyuser">
		             modifyuser = #modifyuser#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ext1">
		             ext1 = #ext1#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ext2">
		             ext2 = #ext2#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ext3">
		             ext3 = #ext3#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ext4">
		             ext4 = #ext4#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ext5">
		             ext5 = #ext5#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="extInt1">
		             extInt1 = #extInt1#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="extInt2">
		             extInt2 = #extInt2#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="extInt3">
		             extInt3 = #extInt3#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="extInt4">
		             extInt4 = #extInt4#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="extInt5">
		             extInt5 = #extInt5#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="inuserid">
		             id in (select u.groupid from cms_group_user as u where u.userid=#inuserid#)
		       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="CmsGroup.findPage.count" resultClass="long">
        SELECT count(*) FROM cms_group <include refid="CmsGroup.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="CmsGroup.findPage" resultMap="RM.CmsGroup">
    	SELECT <include refid="CmsGroup.columns"/> FROM cms_group 
		<include refid="CmsGroup.findPage.where"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
	<select id="CmsGroup.findTop" resultMap="RM.CmsGroup">
    	SELECT <include refid="CmsGroup.columns"/> FROM cms_group     
    	<include refid="CmsGroup.findPage.where"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">#sortColumns#</isNotEmpty>
		</dynamic>
		<dynamic prepend="limit 0,">
			<isNotEmpty property="maxCount">#maxCount#</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>

